@model Rental4You.Models.Reservation

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>Reservation</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.BeginDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.BeginDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.EndDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.EndDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DateTimeOfRequest)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DateTimeOfRequest)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.vehicle)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.vehicle.Id)
        </dd>

        <h5>Vehicle State on Delivery</h5>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.NumberOfKmOfVehicleDelivery)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.NumberOfKmOfVehicleDelivery)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.DamageDelivery)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.DamageDelivery)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ObservationsDelivery)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ObservationsDelivery)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.EmployerDelivery)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.EmployerDelivery)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.DeliveryDate)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.DeliveryDate)
            </dd>

        <h5>Vehicle State on Retrieval</h5>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.NumberOfKmOfVehicleRetrieval)
            </dt>
            <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.NumberOfKmOfVehicleRetrieval)
            </dd>
            <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.DamageRetrieval)
            </dt>
            <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.DamageRetrieval)
            </dd>
            <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.ObservationsRetrieval)
            </dt>
            <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.ObservationsRetrieval)
            </dd>
            <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.EmployerRetrieval)
            </dt>
            <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.EmployerRetrieval)
            </dd>
            <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.RetrievalDate)
            </dt>
            <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.RetrievalDate)
            </dd>

        @if (User.IsInRole("Employer") || User.IsInRole("Manager"))
        {
            @if (Model.confirmed == false)
            {
                <div class="form-group">
                    <a class="btn btn-success" asp-route-id="@Model.Id" asp-controller="Reservations" asp-action="ConfirmReservation">Confirm reservation</a>
                </div>
            }
            <div class="form-group">
                <a class="btn btn-danger" asp-route-id="@Model.Id" asp-controller="Reservations" asp-action="RejectReservation">Reject reservation</a>
            </div>
        }
        
    </dl>
</div>
<div>
    @if (User.IsInRole("Employer"))
    {
        <div>For employers:</div>
        <a asp-action="VehicleState" asp-route-id="@Model?.Id">Edit Vehicle States in delivery and retrieval</a>
        <br>
        <br>
    }
   
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
