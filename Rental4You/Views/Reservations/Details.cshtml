@model Rental4You.Models.Reservation

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>Reservation</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.BeginDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.BeginDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.EndDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.EndDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DateTimeOfRequest)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DateTimeOfRequest)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.vehicle)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.vehicle.Id)
        </dd>

        <h5>Vehicle State on Delivery</h5>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.vehicleStateDelivery.NumberOfKmOfVehicle)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.vehicleStateDelivery.NumberOfKmOfVehicle)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.vehicleStateDelivery.Damage)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.vehicleStateDelivery.Damage)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.vehicleStateDelivery.Observations)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.vehicleStateDelivery.Observations)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.vehicleStateDelivery.ApplicationUser.firstName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.vehicleStateDelivery.ApplicationUser.firstName)
            </dd>

        <h5>Vehicle State on Retrieval</h5>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.vehicleStateRetrieval.NumberOfKmOfVehicle)
            </dt>
            <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.vehicleStateRetrieval.NumberOfKmOfVehicle)
            </dd>
            <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.vehicleStateRetrieval.Damage)
            </dt>
            <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.vehicleStateRetrieval.Damage)
            </dd>
            <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.vehicleStateRetrieval.Observations)
            </dt>
            <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.vehicleStateRetrieval.Observations)
            </dd>
            <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.vehicleStateRetrieval.ApplicationUser.firstName)
            </dt>
            <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.vehicleStateRetrieval.ApplicationUser.firstName)
            </dd>

        @if (User.IsInRole("Employer") || User.IsInRole("Manager"))
        {
            @if (Model.confirmed == false)
            {
                <div class="form-group">
                    <a class="btn btn-success" asp-route-id="@Model.Id" asp-controller="Reservations" asp-action="ConfirmReservation">Confirm reservation</a>
                </div>
            }
            <div class="form-group">
                <a class="btn btn-danger" asp-route-id="@Model.Id" asp-controller="Reservations" asp-action="RejectReservation">Reject reservation</a>
            </div>
        }
        
    </dl>
</div>
<div>
    @if (User.IsInRole("Employer") || User.IsInRole("Manager") )
    {
        <div>For employers:</div>
        <a asp-action="VehicleState" asp-route-id="@Model?.Id">Edit Vehicle States in delivery and retrieval</a>
        <br>
        <br>
    }
   
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
