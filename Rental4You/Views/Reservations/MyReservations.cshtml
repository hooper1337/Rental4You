@model IEnumerable<Rental4You.Models.Reservation>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<h1>Os meus agendamentos</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
Username
            </th>
            <th>
PrimeiroNome
            </th>
            <th>
Ultimo Nome
            </th>
            <th>
Tipo de Aula
            </th>
            <th>
Inicio
            </th>
            <th>
Fim
            </th>
            <th>
Preço
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
                <td>@item.ApplicationUser.UserName</td>
                <td>@item.ApplicationUser.firstName</td>
                <td>@item.ApplicationUser.lastName</td>
                <td>@Html.DisplayFor(modelItem => item.vehicle.brand)</td>
                <td>@Html.DisplayFor(modelItem => item.BeginDate)</td>
                <td>@Html.DisplayFor(modelItem => item.EndDate)</td>
                <td>@Html.DisplayFor(modelItem => item.Price)</td>
        </tr>
}
    </tbody>
</table>
