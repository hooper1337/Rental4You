@model IEnumerable<Rental4You.Models.Reservation>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Our Reservations</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                Username
            </th>
            <th>
                First Name
            </th>
            <th>
                Last Name
            </th>
            <th>
                Brand
            </th>
            <th>
                Begin Date
            </th>
            <th>
                End Date
            </th>
            <th>
                Price
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.ApplicationUser.UserName)</td>
                <td>@Html.DisplayFor(modelItem => item.ApplicationUser.firstName)</td>
                <td>@Html.DisplayFor(modelItem => item.ApplicationUser.lastName)</td>
                <td>@Html.DisplayFor(modelItem => item.vehicle.brand)</td>
                <td>@Html.DisplayFor(modelItem => item.BeginDate)</td>
                <td>@Html.DisplayFor(modelItem => item.EndDate)</td>
                <td>@Html.DisplayFor(modelItem => item.Price)</td>
                <td><a asp-action="Details" asp-route-id="@item.Id">Details</a> </td>
            </tr>
        }
    </tbody>
</table>
