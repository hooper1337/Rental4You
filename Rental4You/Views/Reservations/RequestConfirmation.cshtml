@model Rental4You.Models.Reservation

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h4>Reservation - Confirmation</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <input type="hidden" asp-for="Price" />
            <input type="hidden" asp-for="vehicleId" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Vehicle</label>
                <input type="text" class="form-control form-control-lg" readonly disabled value="@Model.vehicle.brand" />
            </div>
            <div class="form-group">
                <label asp-for="BeginDate" class="control-label"></label>
                <input asp-for="BeginDate" class="form-control" readonly/>
                <span asp-validation-for="BeginDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EndDate" class="control-label"></label>
                <input asp-for="EndDate" class="form-control" readonly/>
                <span asp-validation-for="EndDate" class="text-danger"></span>
            </div>                        
           
            <div class="form-group pt-4">
                <p class="alert alert-info">This request has a cost of:  <b>@Model.Price</b> Euros. </p>
            </div>
            <div class="form-group">
                <p>Please choose of the options above:</p>
                <input type="submit" value="Confirm Reservation?" class="btn btn-primary" />
                <a class="btn btn-danger" asp-controller="Reservations" asp-action="Request">Cancel</a>
            </div>
        </form>
    </div>
</div>

