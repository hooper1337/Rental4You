@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        $.ajax({
            type: "POST",
            url: "/Users/GetDataReservations",
            contentType: "application/json; charset=utf-8",
            dataType: "json",
            success: function (data) {
                let Labels = data[0];
                let Datasets1 = data[1];
                let dataT = {
                    labels: Labels,
                    datasets: [{
                        label: "Reservations",
                        data: Datasets1,
                        fill: false,
                        borderWidth: 1,
                        backgroundColor: ["rgba(255, 99, 71, 1)", "rgba(54, 162, 235, 1)", "rgba(255, 206, 86, 1)",
                            "rgba(75, 192, 192, 1)", "rgba(153, 102, 255, 1)", "rgba(255, 159, 64, 1)",
                            "rgba(255, 99, 132, 1)", "rgba(54, 162, 235, 0.2)", "rgba(255, 206, 86, 0.2)",
                            "rgba(75, 192, 192, 0.2)", "rgba(153, 102, 255, 0.2)", "rgba(255, 159, 64, 0.2)",
                            "rgba(255, 99, 132, 0.2)", "rgba(54, 162, 235, 0.4)", "rgba(255, 206, 86, 0.4)",
                            "rgba(75, 192, 192, 0.4)", "rgba(153, 102, 255, 0.4)", "rgba(255, 159, 64, 0.4)",
                            "rgba(255, 99, 132, 0.4)", "rgba(54, 162, 235, 0.6)", "rgba(255, 206, 86, 0.6)",
                            "rgba(75, 192, 192, 0.6)", "rgba(153, 102, 255, 0.6)", "rgba(255, 159, 64, 0.6)",
                            "rgba(255, 99, 132, 0.6)", "rgba(54, 162, 235, 0.8)", "rgba(255, 206, 86, 0.8)",
                            "rgba(75, 192, 192, 0.8)", "rgba(153, 102, 255, 0.8)", "rgba(255, 159, 64, 0.8)"
                        ]
                    }]
                };
                let ctx = $("#chartReservationsDay").get(0).getContext("2d");
                let myNewChart = new Chart(ctx, {
                    type: 'bar',
                    data: dataT,
                    options: {
                        responsive: true,
                        title: { display: true, text: 'Reservations/Day last 30 days' },
                        legend: { position: 'bottom' },
                    }
                });
            }
        });
    </script>

