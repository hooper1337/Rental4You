@model IEnumerable<Rental4You.Models.Employee>

@{
    ViewData["Title"] = "Index";
}

<h1>Company employees</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                First Name
            </th>
            <th>
                Last name
            </th>
            <th>
                Company
            </th>
            <th>
                Available
            </th>
            <th>
                Options
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.applicationUser.firstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.applicationUser.lastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.company.name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.available)
                </td>
                    @if(item.available)
                    {
                        <td>
                            <a asp-action="makeEmployeeAvailableUnavailable"  asp-route-id="@item.Id" class="btn btn-danger">Make unavailable</a>
                        </td>
                    }                
                    else
                    {
                        <td>
                        <a asp-action="makeEmployeeAvailableUnavailable" asp-route-id="@item.Id" class="btn btn-success">Make available</a>
                        </td>
                    }
             </tr>
        }
    </tbody>
</table>
